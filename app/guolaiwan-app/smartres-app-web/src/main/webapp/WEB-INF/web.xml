<?xml version="1.0" encoding="UTF-8"?>
<!-- servlet3.0头信息 -->
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_1497875934200">

	<display-name>smartres-app</display-name>

	<!-- 配置上下文监听器 -->
	<listener>
		<listener-class>com.smartres.app.web.listener.ContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>com.smartres.app.web.filter.SessionFilter</filter-class>
		<init-param>
			<param-name>logonStrings</param-name><!-- 对登录页面不进行过滤 -->
			<param-value>/login;/layui;/js;/css;/font;/userInfo;/timeout;/logout</param-value>
			
		</init-param>
		<init-param>
			<param-name>includeStrings</param-name><!-- 只对指定过滤参数后缀进行过滤 -->
			<param-value>/product/</param-value>
			
		</init-param>
		<init-param>
			<param-name>redirectPath</param-name><!-- 未通过跳转到登录界面 -->
			<param-value>/admin/timeout</param-value>
		</init-param>
		<init-param>
			<param-name>disabletestfilter</param-name><!-- Y:过滤无效 -->
			<param-value>N</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>



	<!-- 配置SpringMVC -->
	<servlet>
		<servlet-name>dispatch</servlet-name>
		<servlet-class>pub.caterpillar.mvc.servlet.CoreServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>dispatch</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
